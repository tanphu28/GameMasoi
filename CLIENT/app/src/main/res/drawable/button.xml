<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">

    <shape>
            <solid android:color="#ffccd5">

            </solid>
            <stroke android:width="2dp"
                android:color="#f00">

            </stroke >
            <corners android:radius="5dp"></corners>
        <padding android:top="10dp"
            android:left="10dp"
            android:right="10dp"
            android:bottom="10dp">

        </padding>


    </shape>

</item>

    <item>

        <shape>
            <gradient android:startColor="#cdd"
                android:endColor="#cbd000ff">

            </gradient>
            <stroke android:width="1dp"
                android:color="#f00">

            </stroke >
            <corners android:radius="5dp"></corners>
            <padding android:top="10dp"
                android:left="10dp"
                android:right="10dp"
                android:bottom="10dp">

            </padding>


        </shape>

    </item>



</selector>