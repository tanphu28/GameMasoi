<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="match_parent"
android:layout_width="match_parent"
android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#c5c2c2"
    android:orientation="horizontal"
    >
    <ImageButton
        android:id="@+id/imgback"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/back"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#7b7a7a">
        <EditText
            android:id="@+id/edtsearch"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="#f2f1f1"
            android:hint="Nhap số phòng!"
            />
        <ImageButton
            android:id="@+id/imgsearch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/search89"

            />


    </LinearLayout>
    <Button
        android:id="@+id/btnnew"
        android:text="New"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="120dp"
        android:background="#be58ce"
        android:textColor="#fff"
        />
    <Button
        android:id="@+id/btnchoingay"
        android:text="Chơi ngay"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:background="#f56531"
        android:textColor="#fff"
        />



</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#3d3b3b"
    >
    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Bàn"
        android:textColor="#FFF"
        android:textSize="28dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="2dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="#FFF"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Tên bàn"
        android:textColor="#FFF"
        android:textSize="28dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="2dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="#FFF"/>
    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Cược"
        android:textColor="#FFF"
        android:textSize="28dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="2dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="#FFF"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Số người"
        android:textColor="#FFF"
        android:textSize="28dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        />

</LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:fillViewport="true">

        <ListView
            android:id="@+id/listroom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></ListView>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c5c2c2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgavata"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/imgbaove"

            />

        <TextView
            android:id="@+id/txtTenUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:text="Phu"
            android:textColor="#000"
            android:textSize="40dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/dola" />

            <TextView
                android:id="@+id/txttaisan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="5000"
                android:textColor="#000"
                android:textSize="30dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>




