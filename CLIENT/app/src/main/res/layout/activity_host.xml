<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgban"
    android:orientation="horizontal"
    android:id="@+id/fullscreen_content"
    android:textColor="#ffff"
    >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="28dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/left" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtSoPhong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="#fff"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/txtTenPhong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="#fff"
                    android:textSize="15dp" />

            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSkip"
                android:text="Skip"
                android:visibility="invisible"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/lnrchat"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="148dp"
                android:layout_marginBottom="103dp"
                android:text="me"
                android:textSize="20dp"
                android:id="@+id/btnMe"
                android:visibility="invisible"
                />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignEnd="@+id/lnrListAllChon"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="71dp"
                android:layout_marginBottom="87dp"
                android:src="@drawable/imagedie"
                android:visibility="invisible"
                android:id="@+id/imgDie"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lnrListAllChon"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="invisible"
                >
            </LinearLayout>




            <LinearLayout
                android:id="@+id/lnrchat"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="invisible" >


                <ListView
                    android:id="@+id/listChat"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_alignStart="@+id/lnrchat"
                    android:layout_alignTop="@+id/lnrchat"
                    android:background="#FFF"></ListView>


                <LinearLayout
                    android:id="@+id/lnrkhungchat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/edtChat"
                        android:layout_width="180dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btnSend"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/btnSend" />

                </LinearLayout>


            </LinearLayout>
            <Button
                android:id="@+id/btnBatDau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:text="@string/btnstart"
                android:textSize="38dp"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/btnSS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:text="@string/btnstart"
                android:textSize="38dp"
                android:visibility="gone"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgavata"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/gradmale_avatar"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTenUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Phu"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:layout_marginTop="10dp"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/coins" />

                    <TextView
                        android:id="@+id/txtGold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="5000"
                        android:layout_marginTop="5dp"
                        android:textColor="#fff"
                        android:textSize="20dp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="337dp">
            <LinearLayout
                android:id="@+id/lnrtreoco"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/imgtreoco"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/image_user" />
                <TextView
                    android:id="@+id/txttreoco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user"
                    android:textSize="28dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btngiet"
                        android:layout_width="130dp"
                        android:layout_height="60dp"
                        android:textSize="20dp"
                        android:text="@string/btnkill"/>
                    <Button
                        android:id="@+id/btnkhonggiet"
                        android:layout_width="130dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        android:text="@string/btnnotkill"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnrlistUser"
                android:layout_width="match_parent"
                android:layout_height="345dp"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="2dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:background="@drawable/boderlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        >
                    <ImageButton
                        android:id="@+id/btnUser1"
                        android:layout_width="75dp"
                        android:layout_height="88dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/useravt" />

                        <TextView
                            android:id="@+id/txtuser1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#ffff"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/boderlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        >
                    <ImageButton
                        android:id="@+id/btnUser2"
                        android:layout_width="75dp"
                        android:layout_height="88dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/useravt2" />

                    <TextView
                        android:id="@+id/txtuser2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffff"
                        android:textSize="16dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/boderlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        >

                    <ImageButton
                        android:id="@+id/btnUser3"
                        android:layout_width="75dp"
                        android:layout_height="88dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/useravt3" />

                    <TextView
                        android:id="@+id/txtuser3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text=""
                        android:textColor="#ffff"
                        android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:background="@drawable/boderlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        >

                        <ImageButton
                            android:id="@+id/btnUser4"
                            android:layout_width="75dp"
                            android:layout_height="88dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="3dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/userfriend" />

                        <TextView
                            android:id="@+id/txtuser4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text=""
                            android:textColor="#ffff"
                            android:textSize="16dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/boderlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        >

                    <ImageButton
                        android:id="@+id/btnUser5"
                        android:layout_width="75dp"
                        android:layout_height="88dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ueravt4" />

                    <TextView
                        android:id="@+id/txtuser5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text=""
                        android:textColor="#ffff"
                        android:textSize="16dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/boderlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        >

                    <ImageButton
                        android:id="@+id/btnUser6"
                        android:layout_width="75dp"
                        android:layout_height="88dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/user2" />

                    <TextView
                        android:id="@+id/txtuser6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text=""
                        android:textColor="#ffff"
                        android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/imgNhanVat"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/imgtientri" />

                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtThoiGian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="1"
                android:textColor="#ffcd17"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txtLuot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textColor="#ffcd17"
                android:textSize="18dp" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>